<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/iBtnEntradaSalida"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvSalida"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="194dp"
        android:layout_height="135dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/txvTitulo"
        android:layout_width="267dp"
        android:layout_height="34dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Hora de Entrada"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageButton
        android:id="@+id/iBtnEntrar"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTitulo"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageButton
        android:id="@+id/iBtnSalir"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.738"
        app:layout_constraintStart_toEndOf="@+id/iBtnEntrar"
        app:layout_constraintTop_toBottomOf="@+id/txvTitulo"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/iBtnSalir2"
        android:layout_width="94dp"
        android:layout_height="84dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toEndOf="@+id/iBtnEntrar"
        app:layout_constraintTop_toBottomOf="@+id/txvSalida"
        app:srcCompat="@android:drawable/ic_delete" />

    <TextView
        android:id="@+id/txvSalida"
        android:layout_width="259dp"
        android:layout_height="42dp"
        android:layout_marginTop="180dp"
        android:gravity="center"
        android:text="Hora de Salida"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txvTitulo" />

</androidx.constraintlayout.widget.ConstraintLayout>